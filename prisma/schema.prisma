// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  password     String
  profileImage String?
  createdAt    DateTime
  channels     Channel[]
  Message      Message[]
}

model Channel {
  id        Int       @id @default(autoincrement())
  name      String
  topic     String
  image     String
  members   User[]
  messages  Message[]
  createdAt DateTime
  isPrivate Boolean
  password  String?
}

model Message {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  channel   Channel  @relation(fields: [channelId], references: [id])
  userId    Int
  channelId Int
}
